  <!--
   ~ This is the standard Keyspace for dotNetRDF
   ~ To use this simply cut and paste the contents of the file within the <KeySpaces> element of your
   ~ Cassandra configuration file
   ~
   ~ You may need to edit the Replication Strategy to suit your deployment
  -->
    <Keyspace Name="dotNetRDF">
      <ColumnFamily Name="Graphs"
                    CompareWith="BytesType"
                    Comment="Column Family for storing Graph Data" />

      <ReplicaPlacementStrategy>org.apache.cassandra.locator.RackUnawareStrategy</ReplicaPlacementStrategy>

      <!-- Number of replicas of the data -->
      <ReplicationFactor>1</ReplicationFactor>

      <EndPointSnitch>org.apache.cassandra.locator.EndPointSnitch</EndPointSnitch>
        
    </Keyspace>

